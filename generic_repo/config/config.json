{
  "components": {
    "store": {
      "file": "components/store/memory_store.js",
      "depedencies": []
    },
    "convRepo": {
      "file": "components/repo/generic_repo.js",
      "depedencies": [
        "store"
      ],
      "options": {
        "schema": {
          "userId": "int",
          "direction": "string",
          "mesage": "string",
          "timestamp": "int"
        }
      }
    },
    "userRepo": {
      "file": "components/repo/generic_repo.js",
      "depedencies": [
        "store"
      ],
      "options": {
        "schema": {
          "name": "string",
          "gender": "string",
          "city": "string",
          "phone": "string",
          "email": "string"
        }
      }
    },
    "server": {
      "file": "components/server/api_server.js",
      "depedencies": [
        "convRepo",
        "userRepo"
      ],
      "options": {
        "routes": ["/conversations","/users"]
      }
    }
  },
  "main": {
    "component": "server",
    "method": "start",
    "args": [
      5000
    ]
  }
}